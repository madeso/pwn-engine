#ifndef PWN_RENDER_ACTORDEF
#define PWN_RENDER_ACTORDEF

#include <vector>
#include <boost/shared_ptr.hpp>

namespace pwn
{
	namespace render
	{
		class Mesh;
		class Part;

		class ActorDef
		{
		public:
			ActorDef();
			~ActorDef();

			typedef boost::shared_ptr<Part> PartPtr;

			std::vector<PartPtr> parts;
		};

		ActorDef* Compile(Mesh& mesh);
	}
}

#endif