#ifndef PWN_MESHIO_IO
#define PWN_MESHIO_IO

#include <pwn/string>

namespace pwn
{
	namespace mesh
	{
		class Mesh;
	}

	namespace meshio
	{
		struct Compress
		{
			explicit Compress(bool all);

			bool materials;
			bool positions;
			bool normals;
			bool texcoords;
		};

		void Write(const mesh::Mesh& mesh, const pwn::string& file, const Compress compress);
	}
}

#endif