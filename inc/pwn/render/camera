#ifndef PWN_RENDER_CAMERA
#define PWN_RENDER_CAMERA

#include <pwn/math/types>

namespace pwn
{
	namespace render
	{
		class Camera
		{
		public:
			Camera(math::point3 position, math::quat orientation, real fov, real znear, real zfar);

			math::point3 position;
			math::quat orientation;
			real fov;
			real znear;
			real zfar;
		};
	}
}

#endif