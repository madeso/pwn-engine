#ifndef PWN_RENDER_WORLD3_WIDGET
#define PWN_RENDER_WORLD3_WIDGET

#include <pwn/render/widget>
#include <pwn/render/camera>
#include <memory>

namespace pwn
{
	namespace render
	{
		class World3;

		class World3Widget : public Widget
		{
		public:
			World3Widget(const math::rect& rect);
			~World3Widget();

			void setCamera(const Camera& camera);

			void render();
		private:
			std::auto_ptr<World3> world;
			Camera camera;
		};
	}
}

#endif