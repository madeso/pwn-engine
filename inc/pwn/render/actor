#ifndef PWN_RENDER_ACTOR
#define PWN_RENDER_ACTOR

#include <pwn/math/types>

namespace pwn
{
	namespace render
	{
		class ActorDef;
		class RenderList;
		class CompiledCamera;

		class Actor
		{
		public:
			Actor(const math::point3& location, const math::quat& rotation);

			void render(RenderList* rl, const CompiledCamera& camera);

			ActorDef* model;
			math::point3 location;
			math::quat rotation;
		};
	}
}

#endif